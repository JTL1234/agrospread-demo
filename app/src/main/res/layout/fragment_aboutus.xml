<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/arrowback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About US"
                android:textSize="25dp"
                android:textColor="@color/blue"
                android:textStyle="bold"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/about_us_image"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/agrospreadlogo3"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/about_us_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/about_us_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutus"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/about_us_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact us: contact@company.com"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:autoLink="email"
            android:padding="8dp" />

        <Button
            android:id="@+id/button_more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Info"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
